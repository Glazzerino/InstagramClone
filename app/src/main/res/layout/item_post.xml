<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/tvUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:maxWidth="350dp"
        android:maxHeight="300dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHeart"
        android:layout_alignStart="@+id/btnHeart"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Description"
        android:textStyle="italic"
        tools:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvDescription"
        android:layout_alignEnd="@id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="0dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_marginBottom="5dp"
        tools:layout_marginTop="5dp" />

    <ImageButton
        android:id="@+id/btnHeart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/ivImage"
        android:layout_alignStart="@+id/ivImage"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ufi_heart_icon"
        tools:layout_marginTop="10dp" />
</RelativeLayout>